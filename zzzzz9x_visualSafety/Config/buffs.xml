<mj_visualSafety>

<conditional evaluator="client">
	<if cond="mod_loaded('Gears')">
    <conditional evaluator="client">
      <if cond="modsetting('mj_visualSafety', 'global', 'VisualSafety.playerVision.ScreenFX') == 'Yes'">
		<set xpath="/buffs/buff/effect_group/triggered_effect[@action='ModifyScreenEffect']/@intensity">0</set>
      </if>
    </conditional>
  </if>
</conditional>

</mj_visualSafety>